{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/$PROJECT_ID/webapp",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gke-deploy:stable",
      "args": [
        "run",
        "--filename=kubernetes.yml",
        "--location=us-central1-a",
        "--cluster=main"
      ]
    }
  ],
  "images": [
    "gcr.io/$PROJECT_ID/webapp"
  ]
}