{
  "name": "webapp",
  "version": "0.0.0",
  "description": "Web App template",
  "license": "ISC",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kganser/webapp.git"
  },
  "scripts": {
    "format": "eslint --fix 'src/**/*.js'",
    "lint": "eslint 'src/**/*.js'",
    "start": "node src/server.js"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "body-parser": "^1.19.0",
    "chokidar": "^3.3.1",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "level": "^6.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "prettier": "^1.19.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "ignorePatterns": [
      "src/static/"
    ],
    "overrides": [
      {
        "files": "src/views/*",
        "rules": {
          "prettier/prettier": "off"
        }
      }
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "globalReturn": true
      },
      "ecmaVersion": 9
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 100,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run --silent lint"
    }
  }
}
